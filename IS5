<head>
  <title>Diffie-Hellman Key Exchange</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    h2 {
      color: #2c3e50;
    }
    .output {
      background-color: #f4f4f4;
      padding: 10px;
      border-left: 4px solid #2c3e50;
      margin-top: 10px;
    }
  </style>
</head>
<body>

  <h2>Diffie-Hellman Key Exchange</h2>
  <hr>

  <div class="output" id="result"></div>

  <script>
    // Power function to return value of (a^b) % p
    function power(a, b, p) {
      let result = 1;
      a = a % p;
      while (b > 0) {
        if (b % 2 === 1) {
          result = (result * a) % p;
        }
        b = Math.floor(b / 2);
        a = (a * a) % p;
      }
      return result;
    }

    // HTML element to display result
    const resultDiv = document.getElementById("result");

    // Publicly agreed prime number (P) and primitive root (G)
    const P = 23;
    const G = 9;

    // Private keys (secretly chosen)
    const a = 4;  // Alice's private key
    const b = 3;  // Bob's private key

    // Public keys generated by Alice and Bob
    const x = power(G, a, P); // Alice sends x to Bob
    const y = power(G, b, P); // Bob sends y to Alice

    // Secret keys generated independently
    const ka = power(y, a, P); // Alice's secret key
    const kb = power(x, b, P); // Bob's secret key

    // Display results
    resultDiv.innerHTML += `<strong>The value of P:</strong> ${P}<br>`;
    resultDiv.innerHTML += `<strong>The value of G:</strong> ${G}<br>`;
    resultDiv.innerHTML += `<strong>Private key a (Alice):</strong> ${a}<br>`;
    resultDiv.innerHTML += `<strong>Private key b (Bob):</strong> ${b}<br>`;
    resultDiv.innerHTML += `<strong>Public key x (Alice to Bob):</strong> ${x}<br>`;
    resultDiv.innerHTML += `<strong>Public key y (Bob to Alice):</strong> ${y}<br>`;
    resultDiv.innerHTML += `<strong>Secret key (computed by Alice):</strong> ${ka}<br>`;
    resultDiv.innerHTML += `<strong>Secret key (computed by Bob):</strong> ${kb}<br>`;
  </script>

</body>
</html>




